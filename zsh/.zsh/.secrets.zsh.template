# =============================================================================
# SENSITIVE API KEYS AND TOKENS
# =============================================================================
# Copy this file to .secrets.zsh and fill in your actual values.
# NEVER commit .secrets.zsh to version control!
#
# cp .secrets.zsh.template .secrets.zsh
# chmod 600 .secrets.zsh

# Github
export GITHUB_PERSONAL_ACCESS_TOKEN="your_github_token_here"

# Atlassian (Jira/Confluence)
export CONFLUENCE_URL="https://your-org.atlassian.net/wiki"
export CONFLUENCE_USERNAME="your_email@example.com"
export CONFLUENCE_API_TOKEN="your_confluence_api_token"
export JIRA_URL="https://your-org.atlassian.net"
export JIRA_USERNAME="your_email@example.com"
export JIRA_API_TOKEN="your_jira_api_token"

# OpenAI API Key
export OPENAI_API_KEY="your_openai_api_key"

# SonarCloud/SonarQube
export SONARQUBE_TOKEN="your_sonarqube_token"
export SONAR_TOKEN="your_sonar_token"
export SONARQUBE_ORG="your_org_name"

# Brave Web Search API Key
export BRAVE_API_KEY="your_brave_api_key"
