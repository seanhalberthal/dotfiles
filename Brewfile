# Brewfile - Homebrew Bundle
# Install with: brew bundle install

# Taps
tap "homebrew/bundle"
tap "homebrew/cask-fonts"

# =============================================================================
# Core CLI Tools
# =============================================================================

# Shell & Terminal
brew "zsh"
brew "tmux"                   # >= 3.3 required for popup support
brew "powerlevel10k"
brew "zsh-autosuggestions"
brew "fzf"                    # >= 0.40 for --tmux flag
brew "direnv"

# Editors
brew "neovim"                 # >= 0.9 required for lazy.nvim

# AI Coding Assistants
brew "opencode"
cask "claude-code"

# Git & GitHub
brew "gh"
brew "lazygit"

# Search & Navigation
brew "ripgrep"                # >= 13.0
brew "fd"                     # Fast find alternative
brew "tree"
brew "jq"
brew "wget"
brew "bat"                    # Cat with syntax highlighting

# =============================================================================
# Languages & Runtimes
# =============================================================================

# Node.js (via fnm - Fast Node Manager)
brew "fnm"
brew "bun"                    # >= 1.0

# Go
brew "go"

# Python
brew "python@3.13"
brew "pipx"

# Java
brew "openjdk"
cask "zulu@17"

# .NET
cask "dotnet-sdk"

